<% if flash[:notice] %>
  <div class="alert alert-success text-center">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger text-center">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="card shadow-sm border-0 p-4 text-center mx-auto m-4" style="max-width: 400px;">
  <div class="mb-3">
    <%= image_tag @user.get_profile_image(120,120), class: "rounded-circle border shadow-sm" %>
  </div>
  <h3 class="fw-bold mb-2"><%= @user.name %></h3>
  <p class="text-muted mb-3"><%= @user.email %></p>
  <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn-primary w-100" %>
</div>
