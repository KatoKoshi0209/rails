<h2 class="text-center text-primary fw-bold mt-5">ログイン</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-5">
        <%= form_with model: @user, url: user_session_path, class: "needs-validation", novalidate: true do |f| %>
          
          <div class="mb-4">
            <%= f.label :email, class: "form-label fw-bold" %>
            <%= f.email_field :email, class: "form-control shadow-sm", autofocus: true, autocomplete: "email", required: true, placeholder: "メールアドレス" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "form-label fw-bold" %>
            <%= f.password_field :password, class: "form-control shadow-sm", autocomplete: "current-password", required: true, placeholder: "パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label fw-bold" %>
            </div>
          <% end %>

          <div class="d-grid gap-2">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg w-100 shadow-lg", style: "background-color: #2864F0; border-radius: 5px;" %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
