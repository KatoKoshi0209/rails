<div class="container">
  <h2 class="m-4 text-center font-weight-bold" style="color: #2864F0;">従業員情報編集</h2>

  <%= form_with(model: @user, url: administrator_user_path(@user), method: :put, local: true) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, '氏名', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
      <% if @user.errors[:name].any? %>
        <div class="text-danger"><%= @user.errors[:name].first %></div>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :email, 'メールアドレス', class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
      <% if @user.errors[:email].any? %>
        <div class="text-danger"><%= @user.errors[:email].first %></div>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :hourly_wage, '時給（円）', class: 'form-label' %>
      <%= f.number_field :hourly_wage, class: 'form-control', step: "100", min: "0" %>
      <% if @user.errors[:hourly_wage].any? %>
        <div class="text-danger"><%= @user.errors[:hourly_wage].first %></div>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <div class="form-check">
        <%= f.check_box :administrator, class: 'form-check-input' %>
        <%= f.label :administrator, '管理者権限', class: 'form-check-label' %>
      </div>
      <% if @user.errors[:administrator].any? %>
        <div class="text-danger"><%= @user.errors[:administrator].first %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit '更新', class: 'btn btn-primary btn-lg w-100', style: "background-color: #2864F0; border-color: #2864F0;" %>
      <%= link_to '戻る', administrator_users_path, class: "btn btn-secondary w-100 mt-3", style: "background-color: #F5F5F5; color: #2864F0;" %>
    </div>
  <% end %>
</div>
