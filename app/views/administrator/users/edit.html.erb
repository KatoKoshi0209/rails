<div class="container">
  <h2 class="m-4 text-center font-weight-bold" style="color: #2864F0;">従業員情報編集</h2>

  <%= form_with(model: @user, url: administrator_user_path(@user), method: :put, local: true) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, '氏名', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :email, 'メールアドレス', class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :hourly_wage, '時給（円）', class: 'form-label' %>
      <%= f.number_field :hourly_wage, class: 'form-control', step: "100", min: "0" %>
    </div>

    <div class="form-group mb-3">
      <div class="form-check">
        <%= f.check_box :administrator, class: 'form-check-input' %>
        <%= f.label :administrator, '管理者権限', class: 'form-check-label' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit '更新', class: 'btn btn-primary btn-lg', style: "background-color: #2864F0; border-color: #2864F0;" %>
    </div>
  <% end %>
</div>
