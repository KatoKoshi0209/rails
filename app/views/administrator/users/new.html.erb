<div class="container">
  <h1 class="m-3">新規作成</h1>
  <%= form_with(model: @user, url: administrator_users_path, method: :post) do |f| %>
    <div class="form-group">
      <%= f.label :name, '氏名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :hourly_wage, '時給（円）' %>
      <%= f.number_field :hourly_wage, class: 'form-control' %>
    </div>

    <div class="form-group">
      <div class="form-check">
        <%= f.check_box :administrator, class: 'form-check-input' %>
        <%= f.label :administrator, '管理者権限', class: 'form-check-label' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit '作成', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>