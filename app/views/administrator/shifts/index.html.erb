<div class="container mt-4">
  <% if flash[:notice] %>
    <div class="alert alert-success text-center">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger text-center">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <h2 class="mb-3 text-primary">シフト作成カレンダー</h2>

  <!-- 年月選択フォーム -->
  <%= form_with url: administrator_shifts_path, method: :get, local: true do %>
    <div class="form-inline mb-3">
      <%= select_tag :year, options_for_select((Date.today.year - 5..Date.today.year + 5).to_a, params[:year] || Date.today.year), class: "form-select w-auto" %>
      <span class="mr-4">年</span>
      <%= select_tag :month, options_for_select((1..12).to_a, params[:month] || Date.today.next_month.month), class: "form-select w-auto" %>
      <span class="mr-4">月</span>
      <%= submit_tag "カレンダー表示", class: "btn btn-primary" %>
    </div>
  <% end %>

  <table class="table table-bordered text-center">
    <thead class="table-light">
      <tr>
        <% %w[日 月 火 水 木 金 土].each do |day| %>
          <th><%= day %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% selected_year = params[:year] || Date.today.year %>
      <% selected_month = params[:month] || Date.today.next_month.month %>    
      <% start_date = Date.new(selected_year.to_i, selected_month.to_i, 1) %>
      <% end_date = start_date.end_of_month %>

      <% (start_date..end_date).each_slice(7) do |week| %>
        <tr>
          <% week.each do |date| %>
            <td class="p-3">
              <!-- シフト作成画面へのリンク（シフトがなければ新規作成）-->
              <% shifts = Shift.where(date: date) %>
              <% if shifts.empty? %>
                <%= link_to date.day, new_administrator_shift_path(date: date), class: "text-dark fw-bold" %>
              <% else %>
                <%= link_to date.day, edit_administrator_shift_path(shifts.first), class: "text-dark fw-bold" %>
                <!-- シフト情報をクリックすると編集画面に遷移 -->
                <% shifts.each do |shift| %>
                  <div class="small mt-1">
                    <span class="badge bg-light text-dark">
                      <%= link_to "#{shift.user.name} #{shift.start_time.strftime("%H:%M")}-#{shift.end_time.strftime("%H:%M")}", edit_administrator_shift_path(shift), class: "text-dark fw-bold" %>
                    </span>
                    <!-- 削除ボタン -->
                    <%= link_to '削除', administrator_shift_path(shift), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm ml-2" %>
                  </div>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>


  <h3 class="mt-5 text-primary">全従業員の予定人件費: <%= number_to_currency(@total_monthly_salary, precision: 0, unit: '¥') %></h3>
  
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ユーザー</th>
          <th>予定勤務時間（時間）</th>
          <th>予定給与（円）</th>
        </tr>
      </thead>
      <tbody>
        <% @user_schedules.each do |schedule| %>
          <tr>
            <td><%= schedule[:user].name %></td>
            <td><%= schedule[:total_hours].round(2) %> 時間</td>
            <td><%= number_to_currency(schedule[:total_salary], precision: 0, unit: '¥') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
