<div class="container mt-4">
  <h2 class="text-center mb-4 text-primary" style="font-family: 'Roboto', sans-serif;">シフト希望一覧</h2>

  <div class="table-responsive">
    <table class="table table-bordered table-hover" style="border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
      <thead class="thead-dark" style="background-color: #2864F0; color: white;">
        <tr>
          <th>ユーザー名</th>
          <th>日付</th>
          <th>開始時間</th>
          <th>終了時間</th>
        </tr>
      </thead>
      <tbody>
        <% @shift_requests.each do |shift_request| %>
          <tr>
            <td><%= shift_request.user.name %></td>
            <td><%= shift_request.date.strftime("%Y-%m-%d") %></td>
            <td><%= shift_request.start_time.strftime("%H:%M") %></td>
            <td><%= shift_request.end_time.strftime("%H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
