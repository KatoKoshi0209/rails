<div class="container mt-4">
  <h2 class="text-center mb-4 text-primary">シフト希望一覧</h2>

  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ユーザー名</th>
          <th>日付</th>
          <th>開始時間</th>
          <th>終了時間</th>
        </tr>
      </thead>
      <tbody>
        <% @shift_requests.each do |shift_request| %>
          <tr>
            <td><%= shift_request.user.name %></td>
            <td><%= shift_request.date.strftime("%Y-%m-%d") %></td>
            <td><%= shift_request.start_time.strftime("%H:%M") %></td>
            <td><%= shift_request.end_time.strftime("%H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
