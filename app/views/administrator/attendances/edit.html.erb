<div class="container">
  <h2 class="m-3">勤怠情報の編集</h2>

  <%= form_with model: @attendance, url: administrator_user_attendance_path(@user, @attendance), method: :patch, local: true do |form| %>
    <div class="form-group">
      <%= form.label :attendance_time, "出勤時間" %>
      <%= form.datetime_local_field :attendance_time, value: @attendance.attendance_time&.strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :leave_time, "退勤時間" %>
      <%= form.datetime_local_field :leave_time, value: @attendance.leave_time&.strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :break_start_time, "休憩開始時間" %>
      <%= form.datetime_local_field :break_start_time, value: @attendance.break_start_time&.strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :break_end_time, "休憩終了時間" %>
      <%= form.datetime_local_field :break_end_time, value: @attendance.break_end_time&.strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to '戻る', administrator_user_attendances_path(@user), class: "btn btn-secondary" %>
</div>