<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success text-center mb-4 p-3">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger text-center mb-4 p-3">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <h1 class="my-4 text-center text-primary" style="font-family: 'Roboto', sans-serif;">全従業員の月間給与集計</h1>

  <!-- 月間給与と勤務時間合計 -->
  <div class="alert alert-info text-center mb-4 p-4" style="border-radius: 8px; border-color: #2864F0;">
    <h4 class="mb-2" style="font-weight: bold;">全従業員の合計給与</h4>
    <h4 class="display-6 text-primary"><strong><%= number_to_currency(@total_monthly_salary, unit: "¥", precision: 0) %></strong></h4>

    <h4 class="mt-3 mb-2" style="font-weight: bold;">全従業員の合計勤務時間</h4>
    <h4 class="display-6 text-primary"><strong><%= "#{@total_work_hours}時間 #{@total_work_minutes}分" %></strong></h4>
  </div>

  <!-- 月選択フォーム -->
  <%= form_with url: summary_administrator_user_attendances_path, method: :get, local: true do |f| %>
    <div class="form-group row justify-content-center mb-4">
      <label class="col-3 col-form-label text-center" for="year_month" style="font-size: 1.1em; color: #2864F0;">確認したい勤怠月</label>
      <div class="col-4">
        <%= f.month_field :year_month, value: params[:year_month], class: "form-control", placeholder: "YYYY-MM" %>
      </div>
      <div class="col-2">
        <%= submit_tag "検索", class: "btn btn-primary btn-block", style: "background-color: #2864F0; border-color: #2864F0;" %>
      </div>
    </div>
  <% end %>

  <!-- 従業員ごとの給与と勤務時間 -->
  <table class="table table-bordered mt-4 table-hover" style="border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <thead class="thead-dark" style="background-color: #2864F0; color: white;">
      <tr>
        <th scope="col">名前</th>
        <th scope="col">合計給与</th>
        <th scope="col">勤務時間</th>
        <th scope="col">時給</th> <!-- 時給の列を追加 -->
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @monthly_salary_per_user.each do |data| %>
        <tr>
          <td><%= data[:user].name %></td>
          <td><%= number_to_currency(data[:total_salary], unit: "¥", precision: 0) %></td>
          <td><%= "#{data[:total_work_hours]} 時間 #{data[:total_work_minutes]} 分" %></td>
          <td><%= number_to_currency(data[:user].hourly_wage, unit: "¥", precision: 0) %></td> <!-- 時給の表示 -->
          <td>
            <%= link_to '出勤簿を確認', administrator_user_attendances_path(data[:user]), class: 'btn btn-primary', style: "background-color: #2864F0; border-color: #2864F0;" %> <!-- 出勤簿へのリンクボタン -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
