<div class="container d-flex justify-content-center mt-4">
  <div class="card p-4 shadow-sm" style="max-width: 500px; width: 100%; border-radius: 10px; border: none; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    
    <% if @shift_request.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @shift_request.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2 class="mb-4 text-primary text-center" style="font-family: 'Arial', sans-serif; font-weight: 600; font-size: 24px;"><%= @shift_request.date %> のシフト希望</h2>

    <%= form_with model: @shift_request, class: "needs-validation" do |f| %>
      <%= f.hidden_field :date %>

      <div class="mb-3 d-flex align-items-center ml-5">
        <label class="form-label me-3" style="width: 120px; font-weight: 500; font-size: 16px;">開始時間</label>
        <%= f.time_select :start_time, minute_step: 15, class: "form-select w-auto" %>
      </div>

      <div class="mb-3 d-flex align-items-center ml-5">
        <label class="form-label me-3" style="width: 120px; font-weight: 500; font-size: 16px;">終了時間</label>
        <%= f.time_select :end_time, minute_step: 15, class: "form-select w-auto" %>
      </div>

      <div class="d-flex justify-content-center gap-3">
        <%= f.submit "登録", class: "btn btn-lg", style: "background-color: #2864F0; color: white; font-weight: bold; border-radius: 5px; width: 150px;" %>
        <%= link_to "キャンセル", shift_requests_path, class: "btn btn-outline-secondary btn-lg", style: "border-radius: 5px; width: 150px;" %>
      </div>
    <% end %>
  </div>
</div>
